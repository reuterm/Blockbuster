<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_review"
        app:srcCompat="@drawable/ic_rate_review_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/LinkItemImage"/>

    <TextView
        android:id="@+id/tv_review_link"
        tools:text="Review 1"
        app:layout_constraintTop_toTopOf="@+id/iv_review"
        app:layout_constraintBottom_toBottomOf="@+id/iv_review"
        app:layout_constraintLeft_toRightOf="@+id/iv_review"
        app:layout_constraintVertical_bias="0.5"
        style="@style/LinkItemText"/>
</android.support.constraint.ConstraintLayout>