<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/touch_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/play_image_width"
        android:layout_height="@dimen/play_image_height"
        app:srcCompat="@drawable/ic_play_arrow_24dp"
        android:layout_marginLeft="@dimen/play_image_margin_left"
        android:layout_marginStart="@dimen/play_image_margin_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/play_image_margin_top"
        android:layout_marginBottom="@dimen/play_image_margin_bottom" />

    <TextView
        android:id="@+id/tv_trailer_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Trailer 1"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/trailer_text_size"
        app:layout_constraintTop_toTopOf="@+id/iv_play"
        android:layout_marginTop="@dimen/trailer_margin_top"
        app:layout_constraintBottom_toBottomOf="@+id/iv_play"
        android:layout_marginBottom="@dimen/trailer_margin_bottom"
        app:layout_constraintLeft_toRightOf="@+id/iv_play"
        android:layout_marginLeft="@dimen/trailer_margin_left"
        android:layout_marginStart="@dimen/trailer_margin_left"
        app:layout_constraintVertical_bias="0.5" />
</android.support.constraint.ConstraintLayout>